{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["es6", "dom"],
    "types": [
      "jasmine",
      "node",
      "socket.io-client",
      "codemirror",
      "hammerjs"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules",
      "./src/types"
    ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
