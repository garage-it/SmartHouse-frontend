{
  "name": "smart-house-frontend",
  "version": "0.1.0",
  "description": "Smart House UI",
  "main": "src/index.js",
  "scripts": {
    "start": "npm-run-all --parallel server client",
    "server": "node --harmony_destructuring --harmony_rest_parameters server/index.js",
    "client": "webpack-dev-server --watch",

    "test": "karma start",
    "tdd": "karma start --no-single-run --auto-watch --reporters nyan",
    "codecov": "npm codecov < coverage/lcov/lcov.info",
    "validate": "eslint --ext .js ./src ./env ./server ./test",
    "lintfix": "eslint --ext .js ./src ./env ./server ./test --fix",

    "build": "webpack --progress --profile --config ./env/webpack.prod.config.js",
    "build:fast": "webpack --progress --profile",
    "build:production": "cross-env ENV_CONFIG=production webpack --progress --profile -p --config ./env/webpack.prod.config.js",

    "e2e:start": "webdriver-manager start",
    "e2e:update": "webdriver-manager update --standalone",
    "e2e:run": "protractor ./env/protractor.conf.js",

    "prepublish": "npm run build:production"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/garage-it/SmartHouse-frontend.git"
  },
  "keywords": [
    "smart",
    "house",
    "IoT"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garage-it/SmartHouse-frontend/issues"
  },
  "homepage": "https://github.com/garage-it/SmartHouse-frontend#readme",
  "engines": {
    "node": ">=5"
  },
  "bin": "bin/index.js",
  "dependencies": {
    "@angular/http": "2.0.0-rc.4",
    "@angular/common": "2.0.0-rc.4",
    "@angular/compiler": "2.0.0-rc.4",
    "@angular/core": "2.0.0-rc.4",
    "@angular/forms": "^0.2.0",
    "@angular/platform-browser": "2.0.0-rc.4",
    "@angular/platform-browser-dynamic": "2.0.0-rc.4",
    "@angular/platform-server": "2.0.0-rc.4",
    "@angular/router": "3.0.0-beta.2",
    "@angularclass/webpack-toolkit": "^1.3.3",
    "@angularclass/request-idle-callback": "^1.0.7",
    "zone.js": "0.6.12",
    "rxjs": "5.0.0-beta.6",

    "codemirror": "5.18.2",
    "dragula": "^3.7.1",
    "ng2-dragula": "1.1.10",
    "materialize-css": "^0.97.6",
    "mqtt": "^1.11.2",
    "socket.io": "^1.4.5",

    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.4",
    "core-js": "^2.2.2",
    "babel-plugin-angular2-annotations": "^5.0.0",
    "babel-plugin-transform-class-properties": "^6.6.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.7.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",

    "webpack": "^1.12.14",
    "webpack-merge": "^0.9.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^2.14.0",
    "raw-loader": "^0.5.1",
    "reflect-metadata": "^0.1.3",
    "node-sass": "^3.6.0",
    "sass-loader": "^3.2.0",
    "css-loader": "^0.23.1",
    "style-loader": "^0.13.1",
    "clean-webpack-plugin": "^0.1.8",
    "copy-webpack-plugin": "^3.0.1",

    "cross-env": "^2.0.1",
    "dotenv": "^2.0.0",
    "shelljs": "^0.7.0",
    "npm-run-all": "^2.1.1"
  },

  "devDependencies": {
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "codecov": "^1.0.1",
    "jasmine": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-coverage": "^0.5.5",
    "karma-jasmine": "^0.3.8",
    "karma-mocha-reporter": "^2.0.0",
    "karma-nyan-reporter": "^0.2.4",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "phantomjs-prebuilt": "^2.1.6",
    "protractor": "^3.3.0",

    "webpack-dev-server": "^1.14.1",
    "source-map-loader": "^0.1.5",
    "eslint": "^2.6.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-babel": "^3.1.0",

    "express": "^4.13.4",
    "body-parser": "^1.15.0",
    "cors": "^2.7.1"
  }
}
