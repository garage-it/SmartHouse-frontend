{
  "name": "smart-house-frontend",
  "version": "0.1.1",
  "description": "Smart House UI",
  "main": "src/plugin.js",
  "scripts": {
    "start": "npm-run-all --parallel server client",
    "server": "node --harmony_destructuring --harmony_rest_parameters server/index.js",
    "client": "webpack-dev-server --watch",
    "test": "karma start",
    "tdd": "karma start --no-single-run --auto-watch --reporters nyan",
    "codecov": "npm codecov < coverage/lcov/lcov.info",
    "validate": "tslint \"src/**/*.ts\"",

    "lintfix": "tslint --ext .ts ./src ./env ./server ./test --fix",

    "build": "webpack --progress --profile --config ./env/webpack.prod.config.js",
    "build:fast": "webpack --progress --profile",
    "build:production": "cross-env ENV_CONFIG=production webpack --progress --profile -p --config ./env/webpack.prod.config.js",
    "e2e:start": "webdriver-manager start",
    "e2e:update": "webdriver-manager update --standalone",
    "e2e:run": "protractor ./env/protractor.conf.ts",

    "sh:prepublish": "npm run build:production",
    "sh:publish": "npm run preparepublish && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/garage-it/SmartHouse-frontend.git"
  },
  "keywords": [
    "smart",
    "house",
    "IoT"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garage-it/SmartHouse-frontend/issues"
  },
  "homepage": "https://github.com/garage-it/SmartHouse-frontend#readme",
  "engines": {
    "node": ">=5"
  },
  "bin": "bin/index.js",
  "dependencies": {
    "@angular/common": "2.0.0",
    "@angular/compiler": "2.0.0",
    "@angular/core": "2.0.0",
    "@angular/forms": "2.0.0",
    "@angular/http": "2.0.0",
    "@angular/platform-browser": "2.0.0",
    "@angular/platform-browser-dynamic": "2.0.0",
    "@angular/platform-server": "2.0.0",
    "@angular/router": "3.0.0",
    "@angularclass/request-idle-callback": "^1.0.7",
    "@angularclass/webpack-toolkit": "^1.3.3",
    "@types/codemirror": "0.0.33",
    "codemirror": "^5.18.2",
    "core-js": "^2.4.1",
    "dragula": "^3.7.1",
    "materialize-css": "^0.97.6",
    "mqtt": "^1.11.2",
    "ng2-dragula": "1.1.10",
    "rxjs": "5.0.0-beta.12",
    "socket.io": "^1.4.5",
    "zone.js": "^0.6.23",
    "bluebird": "^3.4.6",
    "lodash": "^4.16.3"
  },
  "devDependencies": {
    "@types/codemirror": "^0.0.33",
    "@types/core-js": "^0.9.0",
    "@types/jasmine": "^2.2.29",
    "@types/node": "^6.0.38",
    "@types/socket.io-client": "^1.4.27",
    "angular2-template-loader": "^0.4.0",
    "autoprefixer": "^6.3.2",
    "awesome-typescript-loader": "^2.2.4",
    "body-parser": "^1.15.0",
    "clean-webpack-plugin": "^0.1.8",
    "codecov": "^1.0.1",
    "codelyzer": "^0.0.28",
    "copy-webpack-plugin": "^3.0.1",
    "cors": "^2.7.1",
    "cross-env": "^2.0.1",
    "css-loader": "^0.23.1",
    "dotenv": "^2.0.0",
    "es6-promise-loader": "^1.0.2",
    "express": "^4.13.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^2.14.0",
    "istanbul-instrumenter-loader": "^0.2.0",
    "jasmine": "^2.4.1",
    "jasmine-core": "^2.3.4",
    "jasmine-spec-reporter": "^2.4.0",
    "karma": "^1.2.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.0.3",
    "karma-nyan-reporter": "^0.2.4",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-remap-coverage": "^0.1.1",
    "karma-remap-istanbul": "0.1.1",
